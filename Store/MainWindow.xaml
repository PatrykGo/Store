<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Image Source="images\Store_Logo.png" Margin="211,10,207,353"/>
        <Button Content="Products"  HorizontalAlignment="Center"  VerticalAlignment="Center" Width="204" Height="64" Background="#66cc66" Foreground="#d2fdbb" Margin="250,389,562,284" BorderThickness="0" Click="Click_Products"/>
        <Button Content="Orders" HorizontalAlignment="Center" VerticalAlignment="Center" Width="204" Height="64" Background="#66cc66" Foreground="#d2fdbb" Margin="572,389,240,284" BorderThickness="0" Click="Click_Orders"/>
        <Grid.Background>
            <ImageBrush ImageSource="/images/Store_background.png" Stretch="Fill"/>
        </Grid.Background>
    </Grid>
</Window>
